<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/smoke"
    tools:context=".StarterPages.LoginPage">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/blue"
                android:text="@string/don_t_have_an_account_ncreate_your_account"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="It's quick and easy."
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/smoke"
                    android:background="@drawable/message_shape"
                    android:id="@+id/firstname"
                    android:padding="15dp"
                    android:hint="first name" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/smoke"
                    android:padding="15dp"
                    android:background="@drawable/message_shape"
                    android:id="@+id/middle_name"
                    android:hint="middle name" />

            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/smoke"
                android:background="@drawable/message_shape"
                android:id="@+id/email"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:layout_marginHorizontal="20dp"
                android:hint="Email" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/smoke"
                android:background="@drawable/message_shape"
                android:padding="15dp"
                android:drawableEnd="@drawable/down"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Department :"
                    android:id="@+id/selectedDepartment"
                    android:visibility="gone"
                    android:textSize="18dp"
                    />
                <ProgressBar
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:id="@+id/progressBar"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/department"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/smoke"
                android:background="@drawable/message_shape"
                android:id="@+id/phoneNumber"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:hint="Phone Number" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/smoke"
                android:background="@drawable/message_shape"
                android:id="@+id/createPassword"
                android:padding="15dp"
                android:inputType="textPassword"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:hint="Create Password" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/smoke"
                android:background="@drawable/message_shape"
                android:id="@+id/confirmPassword"
                android:padding="15dp"
                android:inputType="textPassword"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:hint="Confirm Password" />
            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/message_shape"
                android:text="Sign Up"
                android:id="@+id/signUp"
                android:layout_marginTop="10dp"
                />
            <Button
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="back to Sign In"
                android:backgroundTint="@color/smoke"
                android:textColor="@color/blue"
                android:id="@+id/backToSignIn"
                app:cornerRadius="10dp" />
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>